:root {
    --primary: #6366f1;
    --primary-light: #818cf8;
    --accent: #10b981;
    --bg-dark: #0f172a;
    --bg-sidebar: #1e293b;
    --bg-card: rgba(30, 41, 59, 0.5);
    --text-white: #f8fafc;
    --text-dim: #94a3b8;
    --border: rgba(255, 255, 255, 0.08);
    --neon-blue: #38bdf8;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Outfit', sans-serif;
    background-color: var(--bg-dark);
    color: var(--text-white);
    height: 100vh;
    overflow: hidden;
    background-image:
        radial-gradient(at 0% 0%, rgba(99, 102, 241, 0.1) 0, transparent 50%),
        radial-gradient(at 100% 100%, rgba(56, 189, 248, 0.1) 0, transparent 50%);
}

.app-wrapper {
    display: grid;
    grid-template-columns: 320px 1fr 380px;
    height: 100vh;
}

/* Sidebar */
.sidebar {
    background: var(--bg-sidebar);
    border-right: 1px solid var(--border);
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    overflow-y: auto;
}

.brand {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 1rem;
}

.brand i {
    font-size: 1.8rem;
    color: var(--neon-blue);
}

.brand h2 {
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.5px;
}

.brand span {
    color: var(--primary-light);
}

.sidebar-section h3 {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: var(--text-dim);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 8px;
}

.premium-select,
.premium-input {
    width: 100%;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border);
    padding: 0.8rem 1rem;
    border-radius: 12px;
    color: white;
    font-family: inherit;
    font-size: 0.95rem;
    outline: none;
    transition: all 0.3s;
}

.premium-select:focus,
.premium-input:focus {
    border-color: var(--primary);
    box-shadow: 0 0 15px rgba(99, 102, 241, 0.2);
}

.area-fied {
    margin-top: 1rem;
}

.area-fied label {
    font-size: 0.8rem;
    color: var(--text-dim);
    display: block;
    margin-bottom: 6px;
}

.sidebar-nav {
    display: flex;
    flex-direction: column;
    gap: 5px;
}

.nav-item {
    padding: 0.8rem 1rem;
    border-radius: 10px;
    cursor: pointer;
    font-size: 0.9rem;
    color: var(--text-dim);
    transition: all 0.2s;
    display: flex;
    align-items: center;
    gap: 12px;
}

.nav-item:hover {
    background: rgba(255, 255, 255, 0.03);
    color: white;
}

.nav-item.active {
    background: var(--primary);
    color: white;
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
}

/* Main Workspace */
.main-workspace {
    padding: 2rem;
    overflow-y: auto;
    background: rgba(15, 23, 42, 0.4);
}

.workspace-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    gap: 2rem;
}

.search-box {
    position: relative;
    flex: 1;
}

.search-box i {
    position: absolute;
    left: 1.2rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-dim);
}

.search-box input {
    width: 100%;
    background: var(--bg-sidebar);
    border: 1px solid var(--border);
    padding: 1rem 1rem 1rem 3.2rem;
    border-radius: 16px;
    color: white;
    font-size: 1rem;
    outline: none;
}

.unit-badge {
    padding: 0.5rem 1rem;
    background: var(--bg-sidebar);
    border: 1px solid var(--neon-blue);
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--neon-blue);
}

.items-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
}

.item-card {
    background: var(--bg-sidebar);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.item-card:hover {
    border-color: var(--primary);
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
}

.card-code {
    font-size: 0.7rem;
    color: var(--primary-light);
    font-weight: 700;
    opacity: 0.8;
}

.card-name {
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.4;
    color: var(--text-white);
}

.card-unit {
    font-size: 0.8rem;
    color: var(--text-dim);
}

.card-price {
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--accent);
    margin-top: 10px;
}

/* Budget Panel */
.budget-panel {
    background: var(--bg-sidebar);
    border-left: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    padding: 2rem 1.5rem;
}

.panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.panel-header h2 {
    font-size: 1.3rem;
}

.panel-header span {
    color: var(--primary-light);
}

.budget-list {
    flex: 1;
    overflow-y: auto;
    margin-bottom: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.budget-item {
    background: rgba(255, 255, 255, 0.03);
    padding: 1.2rem;
    border-radius: 14px;
    display: grid;
    grid-template-columns: 1fr 60px 30px;
    gap: 12px;
    align-items: center;
}

.b-info h4 {
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 4px;
}

.b-info p {
    font-size: 0.75rem;
    color: var(--text-dim);
}

.b-qty {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid var(--border);
    color: white;
    padding: 0.5rem;
    border-radius: 8px;
    text-align: center;
    font-size: 0.9rem;
}

.action-icon {
    background: none;
    border: none;
    color: var(--text-dim);
    cursor: pointer;
    font-size: 1rem;
    transition: color 0.2s;
}

.action-icon:hover {
    color: #ef4444;
}

.calculation-card {
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border);
    padding: 1.5rem;
    border-radius: 16px;
    margin-bottom: 1.5rem;
}

.calc-row {
    display: flex;
    justify-content: space-between;
    font-size: 0.9rem;
    color: var(--text-dim);
    margin-bottom: 8px;
}

.calc-row.total {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px dashed var(--border);
    color: white;
    font-size: 1.1rem;
    font-weight: 700;
}

.calc-row.total span:last-child {
    color: var(--neon-blue);
    font-size: 1.5rem;
}

.btn-main {
    width: 100%;
    padding: 1.2rem;
    background: linear-gradient(135deg, var(--primary), #4f46e5);
    border: none;
    border-radius: 14px;
    color: white;
    font-weight: 700;
    cursor: pointer;
    transition: transform 0.2s;
}

.btn-main:hover {
    transform: scale(1.02);
    filter: brightness(1.1);
}

/* Scroll */
.custom-scroll::-webkit-scrollbar {
    width: 4px;
}

.custom-scroll::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
}
/* Toast */
.toast { position: fixed; bottom: 30px; left: 50%; transform: translateX(-50%) translateY(100px); background: rgba(99, 102, 241, 0.9); backdrop-filter: blur(10px); color: white; padding: 1rem 2rem; border-radius: 50px; font-weight: 600; box-shadow: 0 10px 30px rgba(0,0,0,0.5); transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); z-index: 9999; }
.toast.show { transform: translateX(-50%) translateY(0); }
